{
    "name": "bhittani/repository",
    "description": "Fluent storage repository with dot notated key support",
    "keywords": ["configuration", "storage", "repository", "fluent", "dot-notation"],
    "homepage": "https://github.com/kamalkhan/repository",
    "license": "MIT",
    "authors": [
        {
            "name": "Kamal Khan",
            "email": "shout@bhittani.com",
            "homepage": "http://bhittani.com"
        }
    ],
    "support": {
        "issues": "https://github.com/kamalkhan/repository/issues"
    },
    "autoload": {
        "psr-4": {
            "Bhittani\\Repository\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bhittani\\Repository\\": "tests"
        }
    },
	"extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
	},
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5,<8.0-DEV"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "symplify/easy-coding-standard": "2.5"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-with-coverage": "phpunit --colors=always --coverage-clover coverage.xml",
        "cs-check": "vendor/bin/ecs check src --config ecs.neon",
        "cs-fix": "vendor/bin/ecs check src --config ecs.neon --fix",
        "check": ["@cs-check", "@test"],
        "ci": ["@cs-check", "test-with-coverage"]
    },
    "repositories": [
        { "packagist": false },
        { "type": "composer", "url": "https://packagist.org" }
    ]
}
